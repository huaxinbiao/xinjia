<% include ../layout/header.ejs %>
		<div style="margin: 15px;">
			<a href="javascript:;" onclick="location.reload()" class="layui-btn layui-btn-small">刷新</a>
			<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
				<legend><% if(type == 1){ %> 添加成功案例 <% }else{ %>添加实用信息<% } %></legend>
			</fieldset>

			<form class="layui-form" action="">
				<div class="layui-form-item">
					<label class="layui-form-label">选择分类：</label>
					<div class="layui-input-block">
						<input type="hidden" name="type" value="<%= type %>" />
							<% if(result.length < 1){ %>
								请先添加分类
							<% }else{ %>
								<% result.forEach(function(item, index){ %>
									<input type="checkbox" value="<%= item._id %>" name="ification" title="<%= item.title %>" 
									<% for(i in toplevel){ %>
										<% if(toplevel[i] == item._id){ %> 
											checked="checked"
										<% } %>
									<% } %>>
								<% }) %>
							<% } %>
					</div>
				</div>
				<div class="layui-form-item">
					<div class="layui-input-block">
						<button class="layui-btn" lay-submit="" lay-filter="demo1">保存</button>
					</div>
				</div>
			</form>
		</div>
		<script type="text/javascript" src="/BeginnerAdmin/plugins/layui/layui.js"></script>
		<script>
			layui.use(['form', 'layedit', 'laydate', 'jquery'], function() {
				var form = layui.form(),
					layer = layui.layer,
					layedit = layui.layedit,
					laydate = layui.laydate,
					$ = layui.jquery;
				var t_fun = false;
				//监听提交
				form.on('submit(demo1)', function(data) {
					if(t_fun){
						return false;
					}
					t_fun = true;
					data.field = $('form').serialize();
					$.post('/admin/toplevel', data.field, function(res){
						if(res.code == 200){
							layer.msg('保存成功', function(){
								location.reload();
							});
						}else{
							layer.msg(res.msg);
							t_fun = false;
						}
					})
					return false;
				});
			});
		</script>
<% include ../layout/footer.ejs %>